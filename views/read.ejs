<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>komiku</title>
    <%- include("partials/header") -%>
  </head>
  <body>
    <%- include("partials/nav") -%>
    <div class="container py-2">
      <section id="read" class="row gap-3">
        <div class="col-lg-8">
          <div class="read shadow d-flex flex-column align-items-center px-2 py-1">
            <% let detail = comic.data.data %>
            <h1 class="title fs-4"><%= detail.title %></h1>
            <div class="w-100 list-images d-flex flex-column gap-2 overflow-scroll">
              <% for(let i = 0; i < detail.images.length; i++) { %>
              <% let ch = detail.images[i] %>
                <img class="img-fluid" src="<%= ch.image %>" alt="<%= ch.alt %>" />
              <% } %>
            </div>
            <div class="paginate-chapter my-2 d-flex justify-content-center gap-1">
              <% if(detail.prev_chapter_endpoint != "") {%>
              <a href="/read/<%= detail.prev_chapter_endpoint %>">
                <p class="px-3 py-2 d-flex justify-content-center align-items-center gap-1">
                  <i class="fa fa-arrow-left"></i>
                  previous
                </p>
              </a>
              <% } %>
              <% if(detail.next_chapter_endpoint != "") {%>
              <a href="/read/<%= detail.next_chapter_endpoint %>">
                <p class="px-3 py-2 d-flex justify-content-center align-items-center gap-1">
                  next
                  <i class="fa fa-arrow-right"></i>
                </p>
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-lg-3 ms-auto">
          <h1 class="fs-4 text-capitalize">popular</h1>
          <div class="popular side d-flex flex-column">
            <% for(let i = 0; i < popular.data.data.length; i++){ %>
              <% let komik = popular.data.data[i] %>
              <div class="komik mb-2 px-0 py-3 d-flex gap-2">
                <img class="thumbnail" src="<%= komik.thumb %>" alt="" />
                <h1 class="title">
                  <a class="mb-2" href="/read/<%= komik.chapter_endpoint %>">
                    <%= komik.title %>
                  </a>
                <p>type : <span class="fw-bold"><%= komik.type %></span></p>
                <p>release : <span class="fw-bold"><%= komik.release %></span></p>
                </h1>
              </div>
            <% } %>
          </div>
        </div>
      </section>
      <%- include("partials/footer") -%>
    </div>

  </body>
</html>